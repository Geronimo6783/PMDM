<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- TextViews Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFC0CB"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textSize="18sp"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Empty Section -->
    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <com.pmdm.ud05a01cd01jb.CustomTextView
            android:id="@+id/customTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto con atributos personalizados"
            app:customTextColor="#FF5722"
            app:customFontSize="20sp" />

        <com.pmdm.ud05a01cd01jb.CustomTextView
            android:id="@+id/customTextView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Texto alineado"/>


    </LinearLayout>

    <!-- Button Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#BAE9A9">

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente ejemplo"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>